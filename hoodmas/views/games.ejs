  <style>
    /*all css*/
    button {
      margin: 10px 10px;
      padding: 10px 15px;
      font-size: 1rem;
      color: white;
      background-color: #ff7878;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #ff3b3f;
    }

    h1 {
      color: #ff3b3f;
      font-family: "Sofia", sans-serif;
      font-size: 5rem;
      text-shadow: 3px 3px 3px #ababab;
      padding: 10px;                         /* Add some padding around the text */
      text-align: center;
    }

    p, .p2{
        font-family: sans-serif;
    }

    /* Snowflake Icon */
    .snowflake {
      font-size: 50px;
      position: fixed;
      top:20px;
      right: 50px;
      cursor: pointer;
      z-index: 1000;  /* Ensures the snowflake icon stays on top */
      transition: 0.5s;  /* Smooth transition when toggling */
      padding: 10px;
    }

    /* Side Menu */
    .side-menu {
      height: 100%;
      width: 0;  /* Initially hidden */
      position: fixed;
      top: 0;
      right: 0;
      background-color: #ff3b3f;
      overflow-x: hidden;
      transition: 0.5s;  /* Smooth transition for opening */
      padding-top: 100px;  /* Space for links */
    }

    /* Side Menu Links */
    .side-menu a {
      padding: 20px 8px 8px 32px;
      text-decoration: none;
      font-size: 25px;
      color: white;
      display: block;
      transition: 0.3s;
    }

    /* Change color on hover */
    .side-menu a:hover {
      background-color: #ff7878;
      color: black;
    }

    /* Open the side menu */
    .side-menu.open {
      width: 20%;  /* Takes up 20% of the right side */
    }

    .go-back {
      position: absolute;
      top: 50px;
      left: 50px;
      cursor: pointer;
      z-index: 1000;  
    }

    /*games css*/
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html{
      border-top-style: solid;
      border-top-color:#ff3b3f;
      border-top-width: 30px;
      padding-bottom: 40px;
    }
    
    body {
      display: flex;
      flex-direction: column; 
      padding: 20px 350px;
    }
    
    .gamesh2 {
      font-size: 2rem;
      margin:0;
      color: #ff3b3f;
    }

    .gamesh3 {
      font-size: 25px;
      margin: 20px 0;
      color: green;
    }
  </style>
</head>
